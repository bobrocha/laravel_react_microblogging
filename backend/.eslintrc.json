{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "airbnb",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["react-refresh"],
    "rules": {
        "comma-dangle": ["error", {
            "functions": "never",
            "arrays": "always",
            "objects": "always"
        }],
        "react-refresh/only-export-components": [
          "warn",
          { "allowConstantExport": true }
        ],
        "no-multi-spaces": ["error", {
            "exceptions": {
              "ImportDeclaration": true,
              "VariableDeclarator": true
            },
            "ignoreEOLComments": true
          }]
    },
    "settings": {
        "import/resolver": {
          "alias": {
            "map": [
              ["@", "./resources/js"]
            ],
            "extensions": [".js", ".jsx", ".ts", ".tsx"]
          }
        }
    }
}
